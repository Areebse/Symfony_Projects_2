{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <main style="width: 35vw; height: 70vh; border: #B0413E solid 1px;  margin-left: 30%; margin-top: 3%; margin-bottom: 2%; border-radius: 15%; display: flex; flex-direction: column; align-items: center; justify-content: center; box-shadow: 5px 5px   #93c5fd">

        <div class="container w-50">
            <div class="col-md-5 mb-1 mb-md-1" id=main-header-div  style="margin-left: 25%">
                <label class="d-inline-flex link-body-emphasis text-decoration-none">
                    <svg xmlns="http://www.w3.org/2000/svg" width="51" height="51" fill="currentColor"
                         class="bi bi-check2-circle" viewBox="0 0 16 16">
                        <path d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0z"/>
                        <path d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l7-7z"/>
                    </svg>
                    <h1>Todo List</h1>
                </label>
            </div>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
                <label for="inputEmail">Email</label>
                <div class="form-floating">

                    <input type="email" value="{{ last_username }}" name="email" class="form-control"
                           placeholder="Email"
                           autocomplete="email" required>
                </div>
                <label for="inputPassword">Password</label>
                <div class="form-floating">


                    <input type="password" name="password" class="form-control"
                           autocomplete="current-password" placeholder="Password"
                           required>
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <br>
                <div class="w-35 m-auto" style="display: flex; justify-content: center">
                    <button class="btn btn-outline-primary py-2" type="submit">
                        Sign in
                    </button>
                </div>

            </form>
            <br>
            <form action="/register">
                <div class="w-35 m-auto" style="display: flex; justify-content: center">
                    <button class="btn btn-outline-primary py-2" type="submit">
                        Register
                    </button>
                </div>

            </form>
        </div>
    </main>
{% endblock %}
