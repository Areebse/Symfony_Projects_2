{% extends 'base.html.twig' %}

{% block title %}CreateView{% endblock %}

{% block body %}

    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    <div class="container w-25 m-auto">
        <h2>Create Todo</h2>
        {{ form_errors(todoForm) }}

        {{ form_start(todoForm) }}
        {{ form_row(todoForm.name) }}
        <br>
        <button type="submit" class="btn btn-lg btn-primary w-100 py-2">Create</button>
        {{ form_end(todoForm) }}
    </div>
    <div class="example-wrapper">

    </div>
{% endblock %}
